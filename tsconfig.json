{
  "compilerOptions": {
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": ["./client/@types", "./node_modules/@types"],
    "baseUrl": "client",
    "paths": {
      "image/*": ["assets/image/*"],
      "atoms/*": ["atoms/*"],
      "molecules/*": ["molecules/*"],
      "organisms/*": ["organisms/*"],
      "templates/*": ["templates/*"],
      "pages/*": ["pages/*"]
    }
  },
  "include": ["./client/assets/image/index.d.ts", "./client/**/*.ts", "./client/**/*.tsx"],
  "exclude": ["./node_modules"]
}
